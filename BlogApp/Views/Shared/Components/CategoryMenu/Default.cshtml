@model IEnumerable<CategoryPostCountDto>
<h3 class="text-center">Categories</h3>
<ul class="list-group">
    @foreach (var ct in Model)
    {
        if (ct != null) 
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a asp-controller="Blog" asp-action="GetPostsByCategory" asp-route-categoryname="@ct.Name">@ct.Name</a> (@ct.PostCount)
            </li>
        }
    }
</ul>