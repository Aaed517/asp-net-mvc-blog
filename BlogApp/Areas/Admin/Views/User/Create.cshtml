@model UserDtoForCreation

<div class="text-center my-5">
    <div class="display-6">Create User</div>
</div>

<div class="container">
    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" asp-action="Create">
                <div class="form-group my-3">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                </div>

                <div class="form-group my-3">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <div class="form-group my-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                </div>

                <div class="form-group my-3">
                    <div>
                        Roles:
                        @foreach (var item in Model.Roles)
                        {
                            <div class="form-check">
                                <input type="radio" name="Roles" value="@item" class="form-check-input" />
                                <label class="form-check-label">@item</label>
                            </div>
                        }
                    </div>
                </div>

                <div class="form-group my-3 text-end">
                    <input type="submit" class="btn btn-primary" />

                    <a asp-action="Index" class="btn btn-outline-primary ms-2">
                        <i class="fa fa-solid fa-arrow-left"></i>
                        Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
