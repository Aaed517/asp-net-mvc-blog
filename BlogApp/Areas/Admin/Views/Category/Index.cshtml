@model IQueryable<Category>

<body>
    <div class="container mt-4">
        <div class="row">
     
            <div class="col-md-8 offset-md-1">
                <h3 class="text-center">Categories</h3>
                <ul class="list-group">
                           <div class="col-md-2">
                <a href="@Url.Action("Create", "Category")" class="btn btn-primary mb-2">Add New</a>
            </div>
                    @foreach (var ct in Model)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @ct.Name
                            <span>
                                <a href="@Url.Action("Update", "Category", new { id = ct.CategoryId })" class="btn btn-sm btn-warning mr-2">
                                    <i class="fas fa-edit"></i> Edit
                                </a>
                                <form method="post" asp-action="Delete" asp-route-id="@ct.CategoryId" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </form>
                            </span>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</body>